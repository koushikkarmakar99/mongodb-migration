{
  "name": "mongodb-denormalized-sink",
  "config": {
    "connector.class": "com.mongodb.kafka.connect.MongoSinkConnector",
    "tasks.max": "1",
    "topics": "denormalized_mailpieces",
    "connection.uri": "mongodb://mongodb:27017",
    "database": "mailtracking",
    "collection": "mailpieces_with_scans",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false",
    "writemodel.strategy": "com.mongodb.kafka.connect.sink.writemodel.strategy.ReplaceOneBusinessKeyStrategy",
    "document.id.strategy": "com.mongodb.kafka.connect.sink.processor.id.strategy.PartialValueStrategy",
    "document.id.strategy.partial.value.projection.type": "AllowList",
    "document.id.strategy.partial.value.projection.list": "imb",
    "post.processor.chain": "com.mongodb.kafka.connect.sink.processor.DocumentIdAdder",
    "max.batch.size": "1000",
    "transforms": "convertGenDate,convertPrintSla,convertDeliverySla",
    "transforms.convertGenDate.type": "org.apache.kafka.connect.transforms.TimestampConverter$Value",
    "transforms.convertGenDate.target.type": "Date",
    "transforms.convertGenDate.field": "statement_gen_date",
    "transforms.convertPrintSla.type": "org.apache.kafka.connect.transforms.TimestampConverter$Value",
    "transforms.convertPrintSla.target.type": "Date",
    "transforms.convertPrintSla.field": "print_sla_date",
    "transforms.convertDeliverySla.type": "org.apache.kafka.connect.transforms.TimestampConverter$Value",
    "transforms.convertDeliverySla.target.type": "Date",
    "transforms.convertDeliverySla.field": "delivery_sla_date"}
}