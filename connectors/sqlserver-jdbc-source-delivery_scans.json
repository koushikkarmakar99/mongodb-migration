{
  "name": "sqlserver-delivery-scans-source",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSourceConnector",
    "tasks.max": "1",
    "connection.url": "jdbc:sqlserver://sqlserver:1433;databaseName=mailtracking;encrypt=true;trustServerCertificate=true",
    "connection.user": "sa",
    "connection.password": "${env:MSSQL_PASSWORD}",
    "mode": "incrementing",
    "incrementing.column.name": "delivery_scan_id",
    "topic.prefix": "sqlserver-",
    "table.whitelist": "delivery_scans",
    "schema.pattern": "dbo",
    "poll.interval.ms": "5000",
    "numeric.precision.mapping": "true",
    "validate.non.null": "false"
  }
}